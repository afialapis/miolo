{
  "name": "miolo-hooks",
  "version": "0.0.1",
  "description": "react hooks for miolo",
  "main": "lib/index.js",
  "cjs": "dist/miolo-hooks.cjs.js",
  "module": "dist/miolo-hooks.es.js",  
  "browser": "dist/miolo-hooks.umd.js",  
  "scripts": {
    "lint": "eslint src",

    "lib-clean": "rm -rf lib && mkdir lib",
    "lib-build": "babel src -d lib",
    "lib": "npm run lib-clean && npm run lib-build",

    "dist-clean": "rm -rf dist && mkdir dist",
    "dist-build": "rollup -c",    
    "dist": "npm run dist-clean && npm run dist-build",
    
    "clean": "npm run lib-clean && npm run dist-clean",
    "prepare": "npm run lint && npm run lib && npm run dist"    
  },
  "author": "Afialapis <info@afialapis.com>",
  "license": "MIT",
  "dependencies": {
    "react": "^17.0.2",
    "miolo-tools": "workspace:../miolo-tools"
  },
  "devDependencies": {
    "@babel/cli": "^7.15.7",
    "@babel/core": "^7.16.7",
    "@babel/eslint-parser": "^7.16.5",
    "@babel/preset-env": "7.16.8",
    "@babel/preset-react": "7.16.7",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^21.0.0",
    "@rollup/plugin-node-resolve": "^13.0.5",
    "@rollup/plugin-replace": "^3.0.0",
    "eslint": "^8.7.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "rollup": "^2.58.0",
    "rollup-plugin-node-externals": "^2.2.0",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "rollup-plugin-terser": "^7.0.2" 
  }
}
