{
  "name": "miolo",
  "version": "3.0.0-beta.122",
  "description": "all-in-one koa-based server",
  "author": "Donato Lorenzo <donato@afialapis.com>",
  "contributors": [
    "Donato Lorenzo <donato@afialapis.com>"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/afialapis/miolo.git"
  },
  "bugs": {
    "url": "https://github.com/afialapis/miolo/issues"
  },
  "homepage": "https://www.afialapis.com/os/miolo",
  "license": "MIT",
  "bin": {
    "miolo": "./bin/index.mjs"
  },
  "type": "module",
  "exports": {
    "node": "./src/index.mjs",
    "import": "./src/index.mjs",
    "default": "./dist/miolo.node.mjs"
  },
  "files": [
    "bin",
    "src"
  ],
  "scripts": {
    "lint": "npx xeira lint ./src",
    "reset": "rm -fr package-lock.json npm-lock.yaml dist/* && npm i",
    "clean": "rm -fr ./dist/*",
    "bundle": "npx xeira bundle --target=node --source_index=./src/index.mjs --bundle_folder=./dist --bundle_name=miolo --bundle_extension=node.mjs",
    "dist": "npm run clean && npm run bundle"
  },
  "dependencies": {
    "@babel/plugin-proposal-decorators": "^7.28.0",
    "@dotenvx/dotenvx": "^1.51.1",
    "@koa/bodyparser": "^6.0.0",
    "@koa/cors": "^5.0.0",
    "@koa/router": "^14.0.0",
    "@maxmind/geoip2-node": "^6.2.0",
    "@tailwindcss/vite": "^4.1.17",
    "@vitejs/plugin-react": "^5.1.0",
    "cacheiro": "^0.5.0-beta.4",
    "calustra": "^1.0.0-beta.3",
    "cron": "^4.3.4",
    "deepmerge": "^4.3.1",
    "diskspace": "^2.0.0",
    "http-terminator": "^3.2.0",
    "intre": "^3.0.0-beta.2",
    "is-plain-object": "^5.0.0",
    "joi": "^18.0.1",
    "jwt-simple": "^0.5.6",
    "koa": "^3.1.1",
    "koa-compress": "^5.1.1",
    "koa-connect": "^2.1.0",
    "koa-favicon": "^2.1.0",
    "koa-mount": "^4.2.0",
    "koa-passport": "^6.0.0",
    "koa-proxies": "^0.12.4",
    "koa-ratelimit": "^6.0.0",
    "koa-session": "^7.0.2",
    "koa-socket-2": "^2.0.0",
    "koa-static": "^5.0.0",
    "nanoid": "^5.1.6",
    "nodemailer": "^7.0.10",
    "passport-local": "^1.0.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "statuses": "^2.0.2",
    "tailwindcss": "^4.1.17",
    "tinguir": "^0.0.7",
    "vite": "^7.2.2",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0",
    "yargs-parser": "^22.0.0"
  },
  "devDependencies": {
    "xeira": "^2.0.0-beta.8"
  },
  "eslintConfig": {
    "extends": [
      "../../node_modules/xeira/configs/eslint.react.cjs"
    ]
  }
}
