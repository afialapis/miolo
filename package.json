{
  "name": "miolo",
  "version": "0.3.2",
  "description": "all-in-one koa-based server",
  "author": "Donato Lorenzo <donato@afialapis.com>",
  "contributors": [
    "Donato Lorenzo <donato@afialapis.com>"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/afialapis/miolo.git"
  },
  "bugs": {
    "url": "https://github.com/afialapis/miolo/issues"
  },
  "homepage": "https://github.com/afialapis/miolo#readme",  
  "license": "MIT",
  "exports": {
    "./server":{
      "import": "./dist/server/miolo.server.mjs",
      "default": "./dist/server/miolo.server.cjs"
    },
    "./cli":{
      "import": "./dist/cli/miolo.cli.mjs",
      "default": "./dist/cli/miolo.cli.umd.js"
    },
    "./cli-react":{
      "import": "./dist/cli-react/miolo.cli-react.mjs",
      "default": "./dist/cli-react/miolo.cli-react.umd.js"
    }    
  },
  "files": [
    "logo",
    "dist"
  ],

  "scripts": {
    "main:purge": "rm -fr node_modules package-lock.json npm-lock.yaml",

    "cli-clean": "rm -fr ./dist/cli/* ",
    "cli-bundle": "npx xeira bundle --target=browser --source_index=./src/cli/index.mjs --bundle_folder=./dist/cli --bundle_name=miolo.cli",
    "cli-dist": "npm run cli-clean && npm run cli-bundle",

    "cli-react-clean": "rm -fr ./dist/cli-react/*",
    "cli-react-bundle": "npx xeira bundle --target=browser --source_index=./src/cli-react/index.mjs --bundle_folder=./dist/cli-react --bundle_name=miolo.cli-react",
    "cli-react-dist": "npm run cli-react-clean && npm run cli-react-bundle",
    
    "server-clean": "rm -fr ./dist/server/*",
    "server-copy-static": "cp ./src/server/middleware/static/miolo.ico ./src/server/routes/robots/robots.txt ./src/server/routes/fallback_index.html ./dist/server/",
    "server-bundle": "npx xeira bundle --target=node --source_index=./src/server/index.mjs --bundle_folder=./dist/server --bundle_name=miolo.server",
    "server-dist": "npm run server-clean && npm run server-bundle && npm run server-copy-static",

    "dist": "npm run cli-dist && npm run cli-react-dist && npm run server-dist",

    "demo-cli-build-bundle": "npx xeira bundle --target=browser --source_index=./demo/src/cli/index.js --bundle_folder=./demo/build/js --bundle_name=miolo-demo --bundler=rollup",
    "demo-cli-build-trim": "rm -fr ./demo/build/js/*umd* ./demo/build/js/*.mjs* ./demo/build/js/*.min* ./demo/build/js/*.iife.js*",
    "demo-cli-build-link": "cd ./demo/build && ln -s ./js/miolo-demo.iife.bundle.js bundle.js",
    "demo-cli-build": "rm -fr ./demo/build/* && npm run demo-cli-build-bundle && npm run demo-cli-build-trim && npm run demo-cli-build-link",
    "demo-server": "NODE_ENV=development npx nodemon --inspect ./demo/src/server/index.js",
    "demo": "npm run demo-cli-build && npm run demo-server",

    "site": "npx xeira site",

    "reset": "npm run main:purge && npm i",
    "prepare": "npm run dist && npm run site"
  },
  "dependencies": {
    "@koa/cors": "^4.0.0",
    "@koa/router": "^10.1.1",
    "assign-deep": "^1.0.1",
    "basic-auth": "^2.0.1",
    "calustra": "^0.9.0",
    "cron": "^1.8.2",
    "diskspace": "^2.0.0",
    "intre": "^1.1.5",
    "jwt-simple": "^0.5.6",
    "koa": "^2.13.4",
    "koa-better-body": "^3.3.9",
    "koa-bodyparser": "^4.3.0",
    "koa-compress": "^5.1.0",
    "koa-convert": "^2.0.0",
    "koa-favicon": "^2.1.0",
    "koa-mount": "^4.0.0",
    "koa-passport": "^4.1.4",
    "koa-proxies": "^0.12.3",
    "koa-redis": "^4.0.1",
    "koa-session": "^6.2.0",
    "koa-socket-2": "2.0.0",
    "koa-static": "^5.0.0",
    "nodemailer": "^6.7.2",
    "passport-local": "^1.0.0",
    "redis": "^4.0.3",
    "socket.io": "^4.4.1",
    "tinguir": "^0.0.3",
    "winston": "^3.6.0"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^6.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.17.2",
    "@babel/preset-env": "7.16.8",
    "@babel/preset-react": "7.16.7",
    "@babel/register": "7.16.9",
    "nodemon": "^2.0.22",
    "xeira": "^0.3.2"
  },
  "eslintConfig": {
    "extends": [
      "./node_modules/xeira/configs/eslint.react.cjs"
    ]
  }
}
